.container#registration-terms
  %ng-include{ src: "'registration/steps.html'" }

  .row
    .small-12.columns
      %header
        %h2 {{'enterprise_terms_step' | t}}
        %h5{ "ng-bind" => "'enterprise_terms_text' | t:{enterprise: enterprise.name}" }
  .row
    .small-12.columns
      %p
        = ContentConfig.enterprise_terms_body.html_safe

  %form{ name: 'terms', novalidate: true, ng: { controller: "RegistrationFormCtrl", submit: "update('finished',terms)" } }
    .row
      %input{type: :checkbox, "ng-model" => "terms_accepted"}
    .row.buttons
      .small-12.columns
        %input.button.secondary{ type: "button", value: "{{'back' | t}}", ng: { click: "select('social')" } }
          %input.button.primary.right{ type: "submit", "ng-disabled" => "!terms_accepted", value: "{{'continue' | t}}" }


